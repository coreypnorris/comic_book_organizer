<h1>Edit <%= @writer.name %></h1>

<%= render('layouts/errors', object: @writer) %>

<form action="/writers/<%= @writer.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="writer_name">Title</label>
  <input id="writer_name" name="writer[name]" type="text" value="<%= @writer.name %>">
  <button>Update Writer</button>
</form>

<a href="/"><button>Home</button></a>
