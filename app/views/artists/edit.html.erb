<h1>Edit <%= @artist.name %></h1>

<%= render('layouts/errors', object: @artist) %>

<form action="/artists/<%= @artist.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="artist_name">Title</label>
  <input id="artist_name" name="artist[name]" type="text" value="<%= @artist.name %>">
  <button>Update Artist</button>
</form>

<a href="/"><button>Home</button></a>
